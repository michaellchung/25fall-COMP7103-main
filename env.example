# LLM配置 - 选择提供商
LLM_PROVIDER=sambanova  # 可选值: openai, sambanova

# OpenAI配置
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini

# SambaNova配置
SAMBANOVA_API_KEY=9a2266c7-a96a-4459-be90-af5dfc58a655
SAMBANOVA_API_BASE=https://api.sambanova.ai/v1
SAMBANOVA_MODEL=Meta-Llama-3.1-8B-Instruct

# 和风天气API
WEATHER_API_KEY=your_qweather_api_key_here

# 高德地图API（前端使用）
AMAP_API_KEY=your_amap_api_key_here

# 数据库配置
DATABASE_URL=sqlite:///./travelmate.db

# ChromaDB配置
CHROMA_DB_PATH=./data/vector_db/chroma

# 应用配置
APP_NAME=TravelMate AI
APP_VERSION=1.0.0
DEBUG=True

# API配置
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# LLM配置
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000
MAX_DIALOGUE_ROUNDS=10

# RAG配置
EMBEDDING_MODEL=text-embedding-3-small
